%音響物理指標
\newcommand{\romath}[1]{
	\ifnum #1=1	I \fi%
	\ifnum #1=2	I\hspace{-.1em}I \fi%
	\ifnum #1=3	I\hspace{-.1em}I\hspace{-.1em}I \fi%
	\ifnum #1=4	I\hspace{-.1em}V \fi%
 	\ifnum #1=5	V \fi%
 	\ifnum #1=6	V\hspace{-.1em}I \fi%
 	\ifnum #1=7	V\hspace{-.1em}I\hspace{-.1em}I \fi%
 	\ifnum #1=8	V\hspace{-.1em}I\hspace{-.1em}I\hspace{-.1em}I \fi%
 	\ifnum #1=9	I\hspace{-.1em}X \fi%
 	\ifnum #1=10 X \fi%
 	\ifnum #1>10 Not Def. \fi
}%
