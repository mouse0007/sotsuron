% アブストラクトの定義（日本語）
\newenvironment{jabstract}{%
	\begin{center}
		{\Large\bf \@jclass 概要 \@jsyear 年度（平成\@jhyear 年度）}
		\vspace{1cm}\par
		\begin{lineskipabst}
		{\LARGE\bf \@jtitle}\vspace{2cm}
		\end{lineskipabst}
	\end{center}
