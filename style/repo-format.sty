% 表紙の定義（日本語）
\def\jmaketitle{\par
	\begingroup
	\@jmaketitle
	\endgroup
}
\def\@jmaketitle{%
	\thispagestyle{empty}
	\begin{center}
		{\Large 平成\@jhyear 年度}
		\vspace{0.5cm}\par
		{\Large \@jclass}
		\vfill
		\begin{lineskiptitle}
		{\huge \@jtitle} %\bf
		\end{lineskiptitle}
		\vfill
		{\Large \@juniv\ \@jfaculty}
		\vspace{0.5cm}\par
		{\LARGE \@jauthor}
		\vspace{2cm}\par
		{\Large 指導教員：\ \@jadvisor\ \@jposition}
	\end{center}
	\newpage
	\pagenumbering{roman}
}

% 表紙の定義（英語）
\def\emaketitle{\par
	\begingroup
	\@emaketitle
	\endgroup
}
\def\@emaketitle{%
	\thispagestyle{empty}
	\begin{center}
		{\Large Year\ \@eyear}
		\vspace{0.5cm}\par
		{\Large \@eclass}
		\vfill
		\begin{lineskiptitle}
		{\Huge\sf \@etitle}
		\end{lineskiptitle}
		\vfill
		{\Large \@euniv\ \@efaculty}
		\vspace{0.5cm}\par
		{\LARGE \@eauthor}
		\vspace{2cm}\par
		{\Large Advisor:\ \@eposition\ \@eadvisor}
	\end{center}
	\newpage
	\pagenumbering{roman}
}

